<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C2D70"
    android:backgroundTint="#154FB3"
    android:backgroundTintMode="add"
    tools:context=".playActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginStart="315dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="328dp"
        android:layout_marginBottom="64dp"
        android:text="@string/playText"
        android:textColor="#FFFCFC"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/wifiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bluetoothButton"
        android:layout_width="173dp"
        android:layout_height="45dp"
        android:layout_marginStart="268dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="268dp"
        android:layout_marginBottom="56dp"
        android:drawableEnd="@drawable/ic_launcher_foreground"
        android:text="@string/bluetooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wifiButton"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/wifiButton"
        android:layout_width="175dp"
        android:layout_height="47dp"
        android:layout_marginStart="321dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="322dp"
        android:drawableEnd="@drawable/wifiicon"
        android:onClick="goToNetworkTest"
        android:text="@string/wifi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="556dp"
        android:layout_marginBottom="40dp"
        android:onClick="goToGameActivity"
        android:text="@string/test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>